#include <iostream.h>
#include <iomanip.h>
#include <stdio.h>
 
class Time
{
    private:
        int sec;
        int h,m,s;
  public:
  void getTime()
{
    cout << "Enter time:" << endl;
    cout << "Hours?   ";          cin >> h;
    cout << "Minutes? ";          cin >> m;
    cout << "Seconds? ";          cin >> s;
    
    sec = h*3600 + m*60 + s;
}
    
void displayTime()
{
    cout << "The time is = " << setw(2) << setfill('0') << h << ":"
                             << setw(2) << setfill('0') << m << ":"
                             << setw(2) << setfill('0') << s << endl;
    cout << "Time in total seconds: " << sec;
}

};
  
int main()
{
    Time T; 
     
    T.getTime();
    T.displayTime();
     
    return 0;
}
